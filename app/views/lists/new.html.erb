
<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %><!-- 箱を作る -->

  <h4>本文</h4>
  <%= f.text_area :body %><!-- 箱を作る -->

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <!-- 画像ファイルのみを受け取るフィールド image/*-->


  <%= f.submit '投稿' %>
<% end %>

<!-- Listモデルの情報を基にオブジェクトが作成される -->

